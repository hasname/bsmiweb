generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Registration {
  id           String        @id // e.g. "R45879"
  taxId        String // 統編
  applicant    String // 申請人
  contactAddr  String // 聯絡地址
  companyAddr  String // 公司地址
  phone        String // 電話
  note         String // 廠商資料備註
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  certificates Certificate[]
}

model Certificate {
  id             String       @id // 證書編號, e.g. "CI450068790054"
  registrationId String
  validDate      String // 有效期間 (民國日期, e.g. "1130202")
  status         String // 證書狀態 (認可/期限到期失效/註銷)
  productName    String // 產品中文名稱
  soldAs         String // 以他人名義銷售
  mainModel      String // 主型式
  seriesModels   String // 系列型號 (newline-separated)
  issuer         String // 發證單位
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  registration   Registration @relation(fields: [registrationId], references: [id])

  @@index([registrationId])
}
